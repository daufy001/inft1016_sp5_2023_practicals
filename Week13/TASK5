    <style>
        /* Task 1: Font sizes for h1 and h2 */
        h1 { 
            font-size: 1.33em; 
        }
        h2 { 
            font-size: 1.17em; 
        }

        /* Task 2: Bottom margin on paragraph tags */
        p {
            margin: 0 0 0.5em 0;
        }

        /* Task 3: Margin adjustments for h1 and h2 */
        h1, h2 {
            margin: 0.83em 0 0.17em 0;
        }

        /* Task 4: Font properties for the first paragraph */
        p:first-of-type {
            font: 0.17em/1.33 Verdana, sans-serif;
        }

        /* Task 5: Text indentation, Box Model, and Background properties */
        p {
            text-indent: 5em;
        }

        p.first {
            text-indent: 0em;
        }

        div#wrapper {
            width: 100px;
        }

        div#banner {
            margin-left: 10px;
            margin-right: 10px;
            padding-left: 10px;
            padding-right: 10px;
            border-left: 1px solid black;
            border-right: 1px solid black;
            width: 30px;
        }

        body {
            background: white url('image.gif') repeat fixed top left;
        }

    </style>
</head>
